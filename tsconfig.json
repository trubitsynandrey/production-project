{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // Absolute imports
    // "baseUrl": ".",
    // вместо requiered можно юзать import
    "esModuleInterop": true,
    // импорты без * as
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ]
}
